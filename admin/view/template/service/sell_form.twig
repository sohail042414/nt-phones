{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-product" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> 
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-product" class="form-horizontal">           
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-color">Product</label>
              <div class="col-sm-10">
                <select name="product_id" id="input-length-class" class="form-control">
                    <option value="">Select</option>
                    {% for product in products %}
                      {% if product.product_id == product_id %}
                        <option value="{{ product.product_id }}" selected="selected">{{ product.name }}</option>
                      {% else %}
                        <option value="{{ product.product_id }}" >{{ product.name }}</option>
                      {% endif %}
                    {% endfor %}
                </select>
                  {% if error_product_id %}
                    <div class="text-danger">{{ error_product_id }}</div>
                  {% endif %}
              </div>
            </div>

            <h3 class="panel-title">Set price/charges for each grade/condition listed below for selected product.</h3>

              <div class="table-responsive">
                <table id="attribute" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left">Grade</td>
                      <td class="text-left">Memory</td>
                      <td class="text-left">Network</td>
                      <td class="text-left">Box</td>
                      <td class="text-left">Price</td>
                      <td></td>
                    </tr>
                  </thead>
                  <tbody>

                    {% set rate_row = 0 %}
                    {% for rate in rates %}
                      <tr id="rate-row{{ rate_row }}">
                        
                        <td class="text-left">                        
                          <select name="sell_rate[{{ rate_row }}][grade_id]" class="form-control">
                              {% for grade in grades %}
                              {% if rate.grade_id == grade.grade_id %}
                                <option selected="selected" value="{{ grade.grade_id }}">{{grade.title}}</option>
                              {% else %}
                               <option value="{{ grade.grade_id }}">{{grade.title}}</option>
                              {% endif %}
                              {% endfor %}
                          </selece> 
                          <input type="hidden" name="sell_rate[{{ rate_row }}][sell_rate_id]" value="{{ rate.sell_rate_id }}"/>
                        </td>

                        <td class="text-left">                        
                          <select name="sell_rate[{{ rate_row }}][memory_id]" class="form-control">
                              {% for memory in memories %}
                              {% if rate.memory_id == memory.memory_id %}                              
                              <option selected="selected" value="{{ memory.memory_id }}">{{memory.name}}</option>
                              {% else %}
                              <option value="{{ memory.memory_id }}">{{memory.name}}</option>
                              {% endif %}
                              {% endfor %}
                          </selece>                           
                        </td>

                        <td class="text-left">                        
                          <select name="sell_rate[{{ rate_row }}][network_id]" class="form-control">
                              {% for network in networks %}
                              {% if rate.network_id == network.network_id %} 
                              <option selected="selected" value="{{ network.network_id }}">{{network.name}}</option>
                               {% else %}
                              <option  value="{{ network.network_id }}">{{network.name}}</option>
                              {% endif %}
                              {% endfor %}
                          </selece>                           
                        </td>

                        <td class="text-left">                        
                          <select name="sell_rate[{{ rate_row }}][box]" class="form-control">
                             
                              <option  {% if rate.box == 1 %} selected="selected" {% endif %}  value="1">Yes</option>                              
                              <option {% if rate.box == 0 %} selected="selected" {% endif %} value="0">No</option>                              
                          </selece>                           
                        </td>

                        <td class="text-left">
                          <input type="text" value="{{ rate.price }}" name="sell_rate[{{ rate_row }}][price]" placeholder="price" class="form-control">   
                        </td>

                        <td class="text-right">
                          <button type="button" onclick="$('#rate-row{{ rate_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
                        </td>
                      </tr>
                      {% set rate_row = rate_row + 1 %}
                    {% endfor %}
                  </tbody>

                  <tfoot>
                    <tr>
                      <td colspan="5"></td>
                      <td class="text-right"><button type="button" onclick="addAttribute();" data-toggle="tooltip" title="{{ button_attribute_add }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                    </tr>
                  </tfoot>
                </table>
              </div>
        </form>
      </div>
    </div>
  </div>

